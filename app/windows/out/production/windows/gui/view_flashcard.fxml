<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="720.0" prefWidth="1280.0" GridPane.rowIndex="1" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.Controller">
   <children>
      <Label alignment="CENTER" layoutX="318.0" layoutY="22.0" prefHeight="64.0" prefWidth="664.0" text="Flashcards">
         <font>
            <Font name="Segoe UI Semibold" size="55.0" />
         </font>
      </Label>
      <Button mnemonicParsing="false" onAction="#goHome" prefHeight="80.0" prefWidth="250.0" text="Home">
         <font>
            <Font size="22.0" />
         </font></Button>
      <TextArea fx:id="flashContent" layoutX="302.0" layoutY="123.0" prefHeight="500.0" prefWidth="680.0" />
      <Button fx:id="newFlash" layoutX="15.0" layoutY="180.0" mnemonicParsing="false" onAction="#newFlash" prefHeight="75.0" prefWidth="250.0" text="New Flashcard" visible="false">
         <font>
            <Font size="22.0" />
         </font></Button>
      <Button fx:id="deleteFlash" layoutX="15.0" layoutY="280.0" mnemonicParsing="false" onAction="#deleteFlash" prefHeight="75.0" prefWidth="250.0" text="Delete Flashcard" visible="false">
         <font>
            <Font size="22.0" />
         </font></Button>
      <Button fx:id="editFlash" layoutX="15.0" layoutY="380.0" mnemonicParsing="false" onAction="#alterFlash" prefHeight="75.0" prefWidth="250.0" text="Edit Flashcard" visible="false">
         <font>
            <Font size="22.0" />
         </font></Button>
      <Button fx:id="flipFlash" disable="true" layoutX="540.0" layoutY="640.0" mnemonicParsing="false" onAction="#flipFlash" prefHeight="40.0" prefWidth="200.0" text="Flip">
         <font>
            <Font size="22.0" />
         </font></Button>
      <ComboBox fx:id="dictDrpDwn" layoutX="1030.0" onAction="#populateFlash" prefHeight="80.0" prefWidth="250.0" promptText="Select a Dictionary..." />
      <ComboBox fx:id="flashDrpDwn" layoutX="1016.0" layoutY="108.0" onAction="#displayFlash" prefHeight="48.0" prefWidth="250.0" promptText="Select a Flashcard..." visible="false" />
      <Button fx:id="prevFlash" disable="true" layoutX="300.0" layoutY="640.0" mnemonicParsing="false" onAction="#prevFlash" prefHeight="40.0" prefWidth="200.0" text="Prev">
         <font>
            <Font size="22.0" />
         </font></Button>
      <Button fx:id="nextFlash" disable="true" layoutX="780.0" layoutY="640.0" mnemonicParsing="false" onAction="#nextFlash" prefHeight="40.0" prefWidth="200.0" text="Next">
         <font>
            <Font size="22.0" />
         </font></Button>
   </children>
</AnchorPane>
